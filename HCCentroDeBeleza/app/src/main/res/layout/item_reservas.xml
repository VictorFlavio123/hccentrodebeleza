<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="3dp"
    android:padding="0dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvNomeServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvData"
            android:layout_below="@+id/tvNomeServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSeparator"
            android:layout_below="@+id/tvNomeServico"
            android:layout_toRightOf="@+id/tvData"
            android:layout_toEndOf="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã s"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_below="@+id/tvNomeServico"
            android:layout_toRightOf="@+id/tvSeparator"
            android:layout_toEndOf="@+id/tvSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ibEditarReserva"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/ibDeletarReserva"
            android:layout_toStartOf="@+id/ibDeletarReserva"
            android:background="@drawable/ic_border_color"/>

        <ImageButton
            android:id="@+id/ibDeletarReserva"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="7dp"
            android:background="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>